---
const acceptLanguage = Astro.request.headers.get('accept-language');
const preferred = acceptLanguage?.startsWith('de') ? 'de' : 'en';
const target = `/${preferred}/`;
---

<html lang={preferred}>
  <head>
    <meta http-equiv="refresh" content={`2; URL='${target}'`} />
  </head>
  <body class="text-center p-8">
    <h1>
      {preferred === 'de' ? 'Seite nicht gefunden' : 'Page not found'}
    </h1>
    <p>
      {preferred === 'de'
        ? 'Du wirst in wenigen Sekunden weitergeleitet…'
        : 'You will be redirected in a few seconds…'}
    </p>
    <p>
      <a href={target} class="text-blue-600 underline">
        {preferred === 'de' ? 'Zur Startseite' : 'Go to homepage'}
      </a>
    </p>
  </body>
</html>